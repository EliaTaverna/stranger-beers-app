# Stranger Beers Environment Configuration
# Copy this file to .env and fill in the values

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/stranger_beers

# =============================================================================
# INGESTION API
# =============================================================================
# Server configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Tally webhook configuration
# Get this from your Tally form settings -> Integrations -> Webhooks
TALLY_SIGNING_SECRET=your_tally_signing_secret_here

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_JSON=false

# =============================================================================
# COMMUNICATIONS SERVICE (future)
# =============================================================================
# WhatsApp Business API
# WHATSAPP_API_TOKEN=
# WHATSAPP_PHONE_NUMBER_ID=

# Email (SendGrid, Resend, etc.)
# EMAIL_API_KEY=
# EMAIL_FROM_ADDRESS=hello@strangerbeers.com

# =============================================================================
# MATCHING SERVICE (future)
# =============================================================================
# MATCHING_BATCH_SIZE=100
# MATCHING_SCHEDULE_CRON="0 9 * * 1"  # Every Monday at 9am
